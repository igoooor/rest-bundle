<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="ibrows_rest.param_converter.patch.class">Ibrows\RestBundle\ParamConverter\PatchParamConverter</parameter>
        <parameter key="ibrows_rest.resource_deserialization.class">Ibrows\RestBundle\Patch\ResourceDeserializationHandler</parameter>
        <parameter key="ibrows_rest.esource_deserialization.type_name_weak">ibrows_rest_resource_weak</parameter>
    </parameters>
    <services>
        <service id="ibrows_rest.param_converter.patch" class="%ibrows_rest.param_converter.patch.class%">
            <argument>%ibrows_rest.config.param_converter.patch%</argument>
            <argument type="service" id="jms_serializer"/>
            <argument type="service" id="ibrows_rest.patch.executioner"/>
            <call method="setValidator">
                <argument type="service" id="validator"/>
            </call>
            <tag name="request.param_converter" converter="patch"/>
        </service>
        <service id="ibrows_rest.listener.resource_deserialization" class="%ibrows_rest.listener.resource_deserialization.class%">
            <argument type="service" id="ibrows_rest.resource_transformer"/>
            <argument type="string">ibrows_rest_resource_weak</argument>
            <tag name="jms_serializer.handler" type="%ibrows_rest.listener.resource_deserialization.type_name_weak%" direction="deserialization" format="json" method="deserializeWeak"/>
        </service>
    </services>
</container>
