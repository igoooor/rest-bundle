<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="ibrows_rest.resource_transformer.class">Ibrows\RestBundle\Transformer\ResourceTransformer</parameter>
    </parameters>
    <services>
        <service id="ibrows_rest.resource_transformer" class="Ibrows\RestBundle\Transformer\ResourceTransformer">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%ibrows_rest.config.resources%</argument>
        </service>
    </services>
</container>
